<?xml version="1.0"?>
<launch>

  <arg name="worldName"/>

  <param name="/use_sim_time" value="true"/>
  <param name="/world_name" value="$(arg worldName)"/>

  <node pkg="ros1_ign_bridge" type="parameter_bridge" name="$(anon ros1_ign_bridge)" args="/world/$(arg worldName)/clock@rosgraph_msgs/Clock@ignition.msgs.Clock">
    <remap from="/world/$(arg worldName)/clock" to="/clock"/>
  </node>

  <include file="$(find subt_ros)/launch/vehicle_topics.launch">
    <arg name="name" value="X1"/>
  </include>
  <include file="$(find subt_ros)/launch/vehicle_topics.launch">
    <arg name="name" value="X2"/>
  </include>
  <include file="$(find subt_ros)/launch/vehicle_topics.launch">
    <arg name="name" value="X3"/>
  </include>
  <include file="$(find subt_ros)/launch/vehicle_topics.launch">
    <arg name="name" value="X4"/>
  </include>

  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_world_static" args="0 0 0 0 0 0 world $(arg worldName)"/>

  <group ns="model">
    <include file="$(find subt_example)/launch/teleop.launch">
      <arg name="config" default="$(find subt_example)/config/ps3_config.yaml"/>
      <arg name="robot_config" value="$(find subt_example)/config/robot_config.yaml"/>
    </include>
  </group>
</launch>
