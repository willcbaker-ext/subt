<?xml version="1.0"?>
<launch>

  <arg name="world_name"/>
  <arg name="vehicle_topics" default="1"/>

  <param name="/use_sim_time" value="true"/>
  <param name="/world_name" value="$(arg world_name)"/>

  <node pkg="ros1_ign_bridge" type="parameter_bridge" name="$(anon ros1_ign_bridge)" args="/clock@rosgraph_msgs/Clock<ignition.msgs.Clock">
  </node>

  <node
    pkg="subt_ros"
    type="subt_ros_relay"
    name="subt_ros_relay"/>

  <group if="$(arg vehicle_topics)">
    <include file="$(find subt_ros)/launch/vehicle_topics.launch">
      <arg name="world_name" value="$(arg world_name)"/>
      <arg name="name" value="X1"/>
    </include>
    <include file="$(find subt_ros)/launch/vehicle_topics.launch">
      <arg name="world_name" value="$(arg world_name)"/>
      <arg name="name" value="X2"/>
    </include>
    <include file="$(find subt_ros)/launch/vehicle_topics.launch">
      <arg name="world_name" value="$(arg world_name)"/>
      <arg name="name" value="X3"/>
    </include>
    <include file="$(find subt_ros)/launch/vehicle_topics.launch">
      <arg name="world_name" value="$(arg world_name)"/>
      <arg name="name" value="X4"/>
    </include>
  </group>

  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_world_static" args="0 0 0 0 0 0 world $(arg world_name)"/>

</launch>
